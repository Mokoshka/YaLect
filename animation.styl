#img-pepper
  background: url('https://pp.vk.me/c630125/v630125151/1ede/G-FVz0bas0c.jpg') no-repeat;

#img-tomato
  background: url('https://pp.vk.me/c630125/v630125151/1ee5/R4k4jbruF2A.jpg') no-repeat;

{veg-names}
  prefix(background-size, 100%)

#melon:checked ~ .container
  #img-melon
    transform: rotateY(0deg) scale(1.5) translateX(200%);

#carrot:checked ~ .container
  #img-carrot
    transform: rotateY(0deg) scale(1.5) translateX(120%);

#watermelon:checked ~ .container
  #img-watermelon
    transform: rotateY(0deg) scale(1.5) translateX(60%);

#kiwi:checked ~ .container
  #img-kiwi
    transform: rotateY(0deg) scale(1.5);

#cucumber:checked ~ .container
  #img-cucumber
    transform: rotateY(0deg) scale(1.5) translateX(-60%);

#pepper:checked ~ .container
  #img-pepper
    transform: rotateY(0deg) scale(1.5) translateX(-120%);

#tomato:checked ~ .container
  #img-tomato
    transform: rotateY(0deg) scale(1.5) translateX(-200%);

