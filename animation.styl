transf(trX, rotY)
  transform: translateX(trX) perspective(300px) rotateY(rotY) translateZ(-40px)


.container
  transform-style: preserve-3d
  width: 100%
  text-align: center
  margin-top: 12em

.veg
  display: none

label
  position: relative
  display: inline-flex
  width: 13%
  height: 120px
  transition-property: transform
  transition-duration: .5s
  box-shadow: 0 1em 2em rgba(60, 63, 65, .78)

#img-melon
  background: url('https://pp.vk.me/c630125/v630125151/1ecc/wMTXhTawg8w.jpg') no-repeat;

#img-carrot
  background: url('https://pp.vk.me/c630125/v630125151/1ed6/frqxQ6oR6Ho.jpg') no-repeat;

#img-watermelon
  background: url('https://pp.vk.me/c630125/v630125151/1eec/daAy02g-Fhc.jpg') no-repeat;

